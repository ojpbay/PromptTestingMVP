{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "declaration": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["tests", "**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}